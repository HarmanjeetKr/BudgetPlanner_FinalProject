<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightGreen">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="301dp"
                  android:orientation="vertical" android:layout_marginTop="40dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="4dp" android:id="@+id/linearLayout2" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.11">

        <TextView
                android:id="@+id/textmth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textRnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mortgage/Rent"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textgros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Groceries"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textpersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textClth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clothing"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textTrspt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textgas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gas/Oil"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textPhn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone/Cable"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/textBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utility Bills"
                android:textSize="15dp"
                android:paddingBottom="10dp" android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:layout_width="198dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                  app:layout_constraintHorizontal_bias="0.2" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.07999998"
                  android:id="@+id/linearLayout4">

        <Spinner
                android:id="@+id/editmth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:prompt="@array/month"
                android:entries="@array/month"
                android:paddingBottom="4dp">
        </Spinner>


        <EditText
                android:id="@+id/editRnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editgros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editpersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editClth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editTrspt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editgas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editPhn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/editBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:singleLine="true" android:inputType="number" android:textAlignment="viewEnd"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.45">

        <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAVE"
                android:onClick="addRecord"
                android:paddingRight="20dp" android:textStyle="bold"/>

        <Button
                android:id="@+id/btnDsply"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DISPLAY"
                android:onClick="showAllRecords"
                android:paddingRight="20dp" android:textStyle="bold"/>
        <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DELETE ALL"
                android:onClick="deleteAllRecords" android:textStyle="bold"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>